        "build:dev": "vite build --mode development",
        "build:staging": "vite build --mode staging",
        "build:prod": "vite build --mode production",
        "build:font": "cp -R tools/webfonts/src/* tools/webfonts/clip && npx font-spider \"tools/webfonts/*.html\" && mkdir -p src/assets/fonts && find tools/webfonts/clip -mindepth 1 -maxdepth 1 ! -name \".font-spider\" -exec cp -R {} src/assets/fonts/ \\;",
        "preview": "vite preview --open",
        "analyze": "cross-env ANALYZE=true vite build --mode production",
        "lint": "eslint . --ext .js,.vue --fix",
        "prepare": "husky install",
        "update": "npm install @2kog/pkg-widget@latest @2kog/pkg-common@latest --registry=https://registry.npmjs.org"
